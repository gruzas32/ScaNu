                        <CheckBox fx:id="threestarsR" layoutX="326.0" layoutY="411.0" mnemonicParsing="false" text="3" />
                        <ComboBox fx:id="recipeCMB" layoutX="15.0" layoutY="320.0" prefWidth="150.0" promptText="Recipe List:" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
