                     <children>
                        <TableView fx:id="RecipesTableView2" layoutX="8.0" layoutY="6.0" prefHeight="200.0" prefWidth="399.0">
                            <columns>
                                <TableColumn text="Recipe Id">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="recipeId" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Recipe Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="recipeName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Description">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="description" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                        <TextField fx:id="recipeNameField" layoutX="14.0" layoutY="222.0" promptText="Recipe Name" />
